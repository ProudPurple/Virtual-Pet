{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build C++17 MSVC",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/std:c++17",
                "${file}",
                "/Fe:${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}